<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Verkehr">
  <Style TargetType="{x:Type local:Ampel}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:Ampel}">
          <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
            <StackPanel Margin="10">
              <Ellipse Width="50" Height="50" Fill="Red" Name="PART_LampeRot" Margin="5"/>
              <Ellipse Width="50" Height="50" Fill="GreenYellow" Name="PART_LampeGruen" Margin="5"/>
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
